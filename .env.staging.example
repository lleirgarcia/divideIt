# Staging Environment Variables
# Copy this file to .env.staging and fill in actual values

# Backend
BACKEND_PORT=3001
NODE_ENV=staging
FRONTEND_URL=https://staging.divideit.example.com
LOG_LEVEL=debug

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=https://staging.divideit.example.com/api

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Nginx
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# Docker Registry
DOCKER_REGISTRY=ghcr.io
IMAGE_PREFIX=your-org/divideit
