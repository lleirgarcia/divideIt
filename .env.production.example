# Production Environment Variables
# Copy this file to .env.production and fill in actual values
# NEVER commit actual secrets to version control

# Backend
BACKEND_PORT=3001
NODE_ENV=production
FRONTEND_URL=https://divideit.example.com
LOG_LEVEL=info

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=https://divideit.example.com/api

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Nginx
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# Docker Registry
DOCKER_REGISTRY=ghcr.io
IMAGE_PREFIX=your-org/divideit

# AWS (if using)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Database (if added)
# DATABASE_URL=postgresql://user:password@host:5432/divideit

# Redis (if added)
# REDIS_URL=redis://host:6379

# JWT (if authentication added)
# JWT_SECRET=CHANGE_ME_STRONG_SECRET_64_CHARS
